# ui/kv/register.kv
<RegisterScreen>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            text: "Register"
            font_size: 40
            halign: 'center'
            
        MDTextField:
            id: username_field
            hint_text: "Username"
            
        MDTextField:
            id: password_field
            hint_text: "Password"
            password: True
            
        MDLabel:
            id: error_label
            text: ""
            theme_text_color: "Error"
            halign: "center"
            
        MDRaisedButton:
            text: "Register"
            size_hint_x: 1
            on_release: root.register()
            
        MDTextButton:
            text: "Back to Login"
            size_hint_x: 1
            on_release: root.manager.current = 'login'