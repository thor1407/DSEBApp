<Feature4_Screen>:
    name: 'grade_entry'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        MDLabel:
            text: "Grade Entry"
            font_style: 'H6'
            halign: 'center'
            valign: 'middle'
            theme_text_color: 'Primary'

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            spacing: dp(10)

            MDTextField:
                id: participation_score
                hint_text: "Participation Score (10%)"
                input_filter: 'float'

            MDTextField:
                id: midterm_score
                hint_text: "Midterm Score (40%)"
                input_filter: 'float'

            MDTextField:
                id: final_score
                hint_text: "Final Exam Score (50%)"
                input_filter: 'float'

        MDRaisedButton:
            text: "Update GPA"
            on_press: root.calculate_gpa(participation_score.text, midterm_score.text, final_score.text)

        MDLabel:
            id: gpa_result
            text: "Projected GPA: "
            theme_text_color: 'Secondary'
            halign: 'center'

        MDRaisedButton:
            text: "Go Back"
            on_press: app.switch_screen('hello')
