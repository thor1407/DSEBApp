<HelloScreen>:
    name: 'hello'
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        elevation: 0
                        md_bg_color: app.theme_cls.primary_color
                        left_action_items: []
                        right_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]
                    
                    Widget:
                        
        MDNavigationDrawer:
            id: nav_drawer
            anchor: 'right'
            
            BoxLayout:
                orientation: 'vertical'
                padding: dp(8)
                spacing: dp(8)
            
            Image:
                
            MDFlatButton:
                on_release: app.switch_screen('account')
                size_hint_y: None
                pos_hint: {'center_y': 0.80}
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(48)
                    
                    MDLabel: 
                        text: 'Account'
                        font_style: 'H6'
                        size_hint_x: None
                        theme_text_color: 'Primary'
                        height: self.texture_size[0]
                        halign: 'left'
                        padding: dp(10)
                        text_size: None, None

            MDFlatButton:
                on_release: app.switch_screen('deadlines')
                size_hint_y: None
                pos_hint: {'center_y': 0.75}
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(48)
                    
                    MDLabel: 
                        text: 'Deadlines'
                        font_style: 'H6'
                        size_hint_x: None
                        theme_text_color: 'Primary'
                        height: self.texture_size[0]
                        halign: 'left'
                        padding: dp(10)
                        text_size: None, None
            
            MDFlatButton:
                on_release: app.switch_screen('feature3')
                size_hint_y: None
                pos_hint: {'center_y': 0.70}
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(48)
                    
                    MDLabel: 
                        text: 'feature3'
                        font_style: 'H6'
                        size_hint_x: None
                        theme_text_color: 'Primary'
                        height: self.texture_size[0]
                        halign: 'left'
                        padding: dp(10)
                        text_size: None, None
                    
            MDFlatButton:
                on_release: app.switch_screen('feature4')
                size_hint_y: None
                pos_hint: {'center_y': 0.65}
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(48)
                    
                    MDLabel: 
                        text: 'feature4'
                        font_style: 'H6'
                        size_hint_x: None
                        theme_text_color: 'Primary'
                        height: self.texture_size[0]
                        halign: 'left'
                        padding: dp(10)
                        text_size: None, None

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        
        MDLabel:
            id: greeting_label
            text: ""
            halign: 'left'
            valign: 'top'
            size_hint_y: None
            height: self.texture_size[1]
            font_style: 'H6'
            font_name: 'Roboto-Bold'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None 
            height: dp(70)  
            ScrollView:
                id: calendar_scroll
                size_hint_y: None
                height: dp(70) 
                pos_hint: {'center_y': 0.6}
                do_scroll_x: True
                MDBoxLayout:
                    id: calendar_bar
                    orientation: 'horizontal'
                    size_hint_x: None
                    spacing: dp(5)
                    padding: [dp(10), dp(20), dp(10), dp(10)]
                    size_hint_y: None
                    height: dp(80)
                    width: self.minimum_width

        MDBoxLayout:
            id: navigation_buttons
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)

        MDBoxLayout:
            id: schedule_box
            orientation: 'vertical'
            size_hint_y: None
            height: dp(200)

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            MDRaisedButton:
                text: 'Add Schedule'
                on_press: root.show_add_schedule_dialog()

        MDRaisedButton:
            text: 'Go Back'
            on_press: app.switch_screen('login')
